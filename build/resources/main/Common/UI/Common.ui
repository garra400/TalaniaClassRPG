@PrimaryTextButtonStyle = TextButtonStyle(
  Default: (Background: #2d7b4c, LabelStyle: (TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)),
  Hovered: (Background: #3a915f, LabelStyle: (TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)),
  Pressed: (Background: #256840, LabelStyle: (TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)),
  Disabled: (Background: #2d7b4c(0.4), LabelStyle: (TextColor: #ffffff(0.6), RenderBold: true, HorizontalAlignment: Center))
);

@SecondaryTextButtonStyle = TextButtonStyle(
  Default: (Background: #2a2a2a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Hovered: (Background: #3a3a3a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Pressed: (Background: #242424, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Disabled: (Background: #2a2a2a(0.4), LabelStyle: (TextColor: #cccccc, HorizontalAlignment: Center))
);

@CancelTextButtonStyle = TextButtonStyle(
  Default: (Background: #3a3a3a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Hovered: (Background: #4a4a4a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Pressed: (Background: #2f2f2f, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Disabled: (Background: #3a3a3a(0.4), LabelStyle: (TextColor: #cccccc, HorizontalAlignment: Center))
);

@PageButtonStyle = TextButtonStyle(
  Default: (Background: #2a2a2a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Hovered: (Background: #333333, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Pressed: (Background: #242424, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Disabled: (Background: #2a2a2a(0.4), LabelStyle: (TextColor: #cccccc, HorizontalAlignment: Center))
);

@SelectionCardStyle = ButtonStyle(
  Default: (Background: #1a1a2e(0.9)),
  Hovered: (Background: #23233e(0.95)),
  Pressed: (Background: #2c2c4d(0.95)),
  Disabled: (Background: #1a1a2e(0.4))
);

@SelectionCardStyleSelected = ButtonStyle(
  Default: (Background: #2d2d55(0.9)),
  Hovered: (Background: #383869(0.95)),
  Pressed: (Background: #2a2a5f(0.95)),
  Disabled: (Background: #2d2d55(0.5))
);

@DefaultScrollbarStyle = ScrollbarStyle(
  Size: 8,
  Background: #2a2a2a,
  Handle: #555555,
  HoveredHandle: #6a6a6a,
  DraggedHandle: #7a7a7a
);

@DefaultLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #ffffff,
  HorizontalAlignment: Start,
  VerticalAlignment: Center,
  Wrap: false
);

@DefaultButtonStyle = TextButtonStyle(
  Default: (Background: #2a2a2a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Hovered: (Background: #3a3a3a, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Pressed: (Background: #242424, LabelStyle: (TextColor: #ffffff, HorizontalAlignment: Center)),
  Disabled: (Background: #2a2a2a(0.4), LabelStyle: (TextColor: #cccccc, HorizontalAlignment: Center))
);

@DefaultInputFieldStyle = InputFieldStyle(
  FontSize: 14,
  TextColor: #ffffff
);

@InputBoxBackground = #1e1e1e(0.95);

@DropdownBoxHeight = 32;

@DefaultDropdownBoxStyle = DropdownBoxStyle(
  DefaultBackground: #2a2a2a,
  HoveredBackground: #333333,
  PressedBackground: #242424,
  DisabledBackground: #2a2a2a(0.4),
  HorizontalPadding: 8,
  LabelStyle: (FontSize: 14, TextColor: #ffffff, HorizontalAlignment: Start, VerticalAlignment: Center),
  DisabledLabelStyle: (FontSize: 14, TextColor: #cccccc, HorizontalAlignment: Start, VerticalAlignment: Center),
  EntryHeight: 28,
  EntriesInViewport: 6,
  HorizontalEntryPadding: 8,
  EntryLabelStyle: (FontSize: 14, TextColor: #ffffff, HorizontalAlignment: Start),
  SelectedEntryLabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Start),
  NoItemsLabelStyle: (FontSize: 14, TextColor: #cccccc, HorizontalAlignment: Center),
  HoveredEntryBackground: #333333,
  PressedEntryBackground: #2a2a2a,
  FocusOutlineSize: 1,
  FocusOutlineColor: #6a6a6a,
  PanelScrollbarStyle: @DefaultScrollbarStyle,
  PanelBackground: #1a1a1a(0.98),
  PanelPadding: 6
);

@PageOverlay = Group {
  Anchor: (Full: 1);
  LayoutMode: Middle;
  Background: #000000(0.55);
};

@DropdownBox = DropdownBox {
  Anchor: (Height: @DropdownBoxHeight);
  Style: @DefaultDropdownBoxStyle;
  ShowLabel: false;
};

@Container = Panel {
  LayoutMode: Top;
  Padding: (Full: 12);
  Background: #1a1a1a(0.92);
  OutlineColor: #404040(0.35);
  OutlineSize: 2;

  Group #Title {
    Anchor: (Height: 32);
  }

  Group #Content {
    LayoutMode: Top;
    FlexWeight: 1;
  }

  Group #Footer {
    Anchor: (Height: 0);
    Visible: false;
  }
};

@DecoratedContainer = Panel {
  LayoutMode: Top;
  Padding: (Full: 15);
  Background: #1a1a1a(0.95);
  OutlineColor: #404040(0.4);
  OutlineSize: 2;

  Group #Title {
    Anchor: (Height: 36);
  }

  Group #Content {
    LayoutMode: Top;
    FlexWeight: 1;
  }
};

@Title = Label {
  Style: (FontSize: 24, RenderBold: true, TextColor: #ffffff);
  Text: @Text;
};

@Subtitle = Label {
  Style: (FontSize: 14, TextColor: #c0c0c0);
  Text: @Text;
};

@TextButton = TextButton {
  Anchor: (Width: 160, Height: 34);
  Style: @PrimaryTextButtonStyle;
  Padding: (Full: 6);
};

@SecondaryTextButton = TextButton {
  Anchor: (Width: 120, Height: 32);
  Style: @SecondaryTextButtonStyle;
  Padding: (Full: 6);
};

@CancelTextButton = TextButton {
  Anchor: (Width: 120, Height: 32);
  Style: @CancelTextButtonStyle;
  Padding: (Full: 6);
};

@BackButton = TextButton {
  Anchor: (Width: 120, Height: 32);
  Style: @SecondaryTextButtonStyle;
  Padding: (Full: 6);
};

@PageButton = TextButton {
  Anchor: (Width: 100, Height: 32);
  Style: @PageButtonStyle;
  Padding: (Full: 6);
};
